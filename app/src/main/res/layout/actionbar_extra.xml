<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingLeft="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/actionbar_battery_abbreviation"
        android:id="@+id/batteryTV"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:visibility="invisible"/>

    <ProgressBar
        android:paddingLeft="5dip"
        android:id="@+id/batteryProgressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="3dip"
        android:paddingBottom="3dip"
        android:progress="100"
        android:max="100"
        android:indeterminateOnly="false"
        android:progressDrawable="@drawable/custom_progress_bar_vertical"
        android:maxWidth="10dip"
        android:minWidth="10dip"
        android:visibility="invisible"/>

    <ProgressBar
        android:paddingLeft="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@+id/antProgressBar"
        android:layout_gravity="center_vertical"
        android:visibility="invisible"/>

</LinearLayout>